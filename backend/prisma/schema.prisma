generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Note {
	id	 	String 	@id @default(cuid())
	title		String
	content		String?	// Opcional o nota vacia
	createdAt	DateTime @default(now())
	updatedAt	DateTime @updatedAt
	archived	Boolean	@default(false)
	tags      Tag[]    @relation("NoteTags")
	user	User[] @relation("UserNotes") // Relation to User model
}

model Tag {
  id    String @id @default(cuid())
  name  String @unique 
  notes Note[] @relation("NoteTags") // Relation to Note model
}

model User {
	id		String 	@id @default(cuid())
	email		String 	@unique
	password	String
	name		String
	role	 String @default("user") // "user" or "admin"
	notes	Note[] @relation("UserNotes") // Relation to Note model
	createdAt	DateTime @default(now())
	updatedAt	DateTime @updatedAt
}